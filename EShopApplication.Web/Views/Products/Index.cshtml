@model List<EShopApplication.Domain.Domain_models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Products" asp-action="Create">Add new product</a>
    </div>
    @for(int i=0; i<Model.Count();i++)
    {
        var item = Model[i];
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@item.ProductImage" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text">@item.ProductDescription</p>
                        <h6>Price: @item.ProductPrice</h6>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        <a href="/Products/AddProductToCart/@item.Id" class="btn btn-primary">Add to cart</a>
                    </div>
                </div>
        </div>
        if(i % 3 == 2)
        {
            @:</div>
        }
    }
</div>  